{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"paths": {
			"/@/*": ["src/*"],
			"/#/*": ["types/*"]
		},
		"types": ["element-plus/global"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/**/*.d.ts",
		"build/**/*.ts",
		"build/**/*.d.ts",
		"src/components/ApiSelect/src/areaData.json"
	]
}
